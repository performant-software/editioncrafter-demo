        <EditionCrafter
            documentName='Domenico'
            transcriptionTypes={{
                translation: 'Translation',
                transcription: 'Transcription',
            }}
            iiifManifest='http://localhost:4321/domenico-edition/iiif/manifest.json'
            client:only
        />
    </div>
</Layout>